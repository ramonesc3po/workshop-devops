#!/usr/local/env groovy

/*
  Provision terraform webapp
*/

pipeline {
    agent {
        docker {
            image 'hashicorp/terraform:latest'
            args '--entrypoint=""'
        }
    }


    stages {
        stage('init') {
            steps {
                checkout scm
                sh """
                ls -la
                cd organization/terraform/hub
                terraform init
                """
            }
        }
    }
}